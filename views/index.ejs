<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Express App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Welcome to My Express Server App</h1>
    <form action="/api/items" method="POST">
        <input type="text" name="item" placeholder="Add new item" required>
        <input type="text" name="description" placeholder="Add item description"  required>
        <button type="submit">Submit</button>
    </form>

    <h2>Items List</h2>
<ul class="items-list">
  <% items.forEach(item => { %>
    <li class="item"><strong><%= item.name %></strong>: <%= item.description %> (ID: <%= item.id %>)</li>
  <% }) %>
</ul>
    
<ul>
    <% links.forEach(link => { %>
        <li><a href="<%= link.href %>" target="_blank"><%= link.rel %></a></li>
    <% }); %>
</ul>



</body>
</html>
