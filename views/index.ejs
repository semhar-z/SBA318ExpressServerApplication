<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Express App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <header>
    <h1>Welcome to My Express Server App</h1>
  </header>
    
    <h2>Add new item and it's description</h2>
    <form action="/api/items" method="POST">
        <input type="text" name="item" placeholder="Add new item" required>
        <input type="text" name="description" placeholder="Add item description"  required>
        <button type="submit">Submit</button>
    </form>

    <h2>Items List</h2>
<div class="items-list">
  <ul>
    <% items.forEach(item => { %>
     <li class="item"><strong><%= item.name %></strong>: <%= item.description %> (ID: <%= item.id %>)</li>
    <% }) %>
  </ul>
</div>   
  <ul>
    <% links.forEach(link => { %>
        <li><a href="<%= link.href %>" target="_blank"><%= link.rel %></a></li>
    <% }); %>
  </ul>

<h2>Add a Comment</h2>
<form action="/api/comments" method="POST">
    <input type="number" name="userId" placeholder="User ID" required>
    <input type="number" name="postId" placeholder="Post ID" required>
    <textarea name="body" placeholder="Comment" required></textarea>
    <button type="submit">Add Comment</button>
</form>


<h2>Comments List</h2>
<div class="commentsList">
  <ul>
    <% comments.forEach(comment => { %>
        <li>
            <p><strong>User <%= comment.userId %> on Post <%= comment.postId %>:</strong> <%= comment.body %></p>
            <form action="/api/comments/<%= comment.id %>?_method=DELETE" method="POST">
                <button type="submit">Delete Comment</button>
            </form>
        </li>
    <% }); %>
  </ul>
</div>

<footer>
